<!DOCTYPE html>
<html lang="en">
    <%- include ('../includes/head.ejs') %>
    <body>
        <%- include ('../includes/header.ejs') %>
        <main>
            <div class="registerSection">
                <section class="userSection">
                    <section class="userData">
                        <figure class="avatarContenedor">
                            <img
                                class="avaratImg"
                                src="/assets/Images/malik-skydsgaard-IgkwHPb-Vk8-unsplash.jpg"
                                alt="user_photo.jpg"
                            />
                        </figure>
                        <h4 class="nombreCompleto">Nombre completo</h4>
                        <p class="nombreUsuario">UserName#0000</p>
                    </section>
                    <section class="userData">
                        <form
                            action="/user/save"
                            method="post"
                            class="formularioDescripcion"
                        >
                            <label for="userDescription">Descripcion: </label>
                            <input
                                type="textarea"
                                name="userDescription"
                                id="userDescription"
                            />
                        </form>
                    </section>
                    <section class="userData">
                        <nav>
                            <a href="/"
                                ><i
                                    class="fa-brands fa-facebook"
                                    id="iconosRedes"
                                ></i
                            ></a>
                            <a href="/"
                                ><i
                                    class="fa-brands fa-instagram"
                                    id="iconosRedes"
                                ></i
                            ></a>
                            <a href="/"
                                ><i
                                    class="fa-brands fa-twitter"
                                    id="iconosRedes"
                                ></i
                            ></a>
                        </nav>
                    </section>
                </section>

                <section class="userRegistrationForm">
                    <form
                        action="/user/save"
                        method="post"
                        class="formularioRegister"
                    >
                        <fielset class="fieldsetRegister">
                            <label class="labelRegister" for="name"
                                >Nombre:
                            </label>
                            <input
                                class="inputRegister"
                                type="text"
                                name="name"
                                id="name"
                                value="<%=user.name  %> "
                                placeholder="Introduzca aqui su nombre y apellido"
                                required
                            />
                        </fielset>
                        <fielset class="fieldsetRegister">
                            <label class="labelRegister" for="lastname"
                                >Apellido:
                            </label>
                            <input
                                class="inputRegister"
                                type="text"
                                name="lastname"
                                id="lastname"
                                value="<%=user.name  %> "
                                placeholder="Introduzca aqui su nombre y apellido"
                                required
                            />
                        </fielset>
                        <fielset class="fieldsetRegister">
                            <label class="labelRegister" for="email"
                                >Email:
                            </label>
                            <input
                                class="inputRegister"
                                type="email"
                                name="email"
                                id="email"
                                placeholder="Introduzca aqui su email"
                                required
                            />
                        </fielset>
                        <fielset class="fieldsetRegister">
                            <label class="labelRegister" for="birthday"
                                >Fecha de nacimiento:
                            </label>
                            <input
                                class="inputRegister"
                                type="date"
                                name="birthday"
                                id="birthday"
                                min="2000-01-02"
                                required
                            />
                        </fielset>
                        <fielset class="fieldsetRegister">
                            <label class="labelRegister" for="password"
                                >Contrasena:
                            </label>
                            <input
                                class="inputRegister"
                                type="password"
                                name="password"
                                id="password"
                                required
                            />
                        </fielset>
                        <fielset class="fieldsetRegister">
                            <label class="labelRegister" for="password2"
                                >Confirmar contrasena:
                            </label>
                            <input
                                class="inputRegister"
                                type="password"
                                name="password2"
                                id="password2"
                                required
                            />
                        </fielset>
                        <fielset class="fieldsetRegister">
                            <label class="labelRegister" for="image"
                                ><i class="fa-solid fa-image"></i> Foto de
                                perfil:
                            </label>
                            <input
                                class="inputRegister"
                                type="file"
                                name="image"
                                name="image"
                                accept="image/*"
                                required
                            />
                        </fielset>
                        <fieldset class="fieldsetTermsConditions">
                            <button class="registerButton" type="submit">
                                CAMBIAR
                            </button>
                        </fieldset>
                    </form>
                </section>
            </div>
        </main>
        <%- include ('../includes/footer.ejs') %>
    </body>
</html>
