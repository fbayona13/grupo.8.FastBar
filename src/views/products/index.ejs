<!DOCTYPE html>
<html lang="en">
  <%- include ('../includes/head.ejs') %>
  <body>
    <%- include ('../includes/header.ejs') %>

    <h2>Aca va una lista de todos los productos</h2>
    <% allProducts.forEach(product => { %>
    <article class="productTile">
      <picture>
        <a href="">
          <img src="/productsImages/<%= product.image%>" alt="" />
        </a>
      </picture>
      <section>
        <h3><%= product.drinkName%></h3>
        <p>Descripcion: <%= product.description%></p>
        <p>Categoria: <%= product.category%></p>
        <p>Perfil de Sabor: <%= product.flavorProfile%></p>
        <p>Creador: <%= product.creator%></p>
        <p>Historia: <%= product.history%></p>
        <% if (user && (user.isAdmin || user.isSeller)) { %>
        <a href="/products/edit/<%= product.id%>"><i class="fa-solid fa-pen-to-square"></i></a>
        <a href="/products/delete"><i class="fa-solid fa-trash-can"></i></a>
        <% } %>
      </section>
    </article>
    <% }) %> <%- include ('../includes/footer.ejs') %>
  </body>
</html>
